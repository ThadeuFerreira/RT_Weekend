{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdir-windows",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist .\\build mkdir .\\build"
            ],
            "problemMatcher": []
        },
        {
            "label": "mkdir-linux",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "build-windows",
            "type": "shell",
            "command": "odin",
            "args": ["build", ".", "-collection:RT_Weekend=.", "-debug", "-out:build/debug.exe"],
            "dependsOn": "mkdir-windows",
            "problemMatcher": [],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" }
        },
        {
            "label": "build-linux",
            "type": "shell",
            "command": "odin",
            "args": ["build", ".", "-collection:RT_Weekend=.", "-debug", "-out:build/debug"],
            "dependsOn": "mkdir-linux",
            "problemMatcher": [],
            "group": "build",
            "presentation": { "reveal": "always", "panel": "shared" }
        },
        {
            "label": "run-linux",
            "type": "shell",
            "command": "./build/debug",
            "args": ["-w", "400", "-h", "225", "-s", "10", "-c", "4"],
            "dependsOn": "build-linux",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "run-windows",
            "type": "shell",
            "command": ".\\build\\debug.exe",
            "args": ["-w", "400", "-h", "225", "-s", "10", "-c", "4"],
            "dependsOn": "build-windows",
            "problemMatcher": [],
            "group": "test"
        }
    ]
}