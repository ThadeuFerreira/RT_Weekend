{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "build-windows",
            "program": "${workspaceFolder}/build/debug.exe",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build-linux",
            "program": "${workspaceFolder}/build/debug",
            "args": ["--no-progress"],
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug (Test Mode)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build-linux",
            "program": "${workspaceFolder}/build/debug",
            "args": ["-t"],
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}